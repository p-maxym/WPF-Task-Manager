<Window x:Class="WPF_Task_Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Task_Manager"
        xmlns:wpfAnimatedGif="clr-namespace:WpfAnimatedGif;assembly=WpfAnimatedGif"
        mc:Ignorable="d"
        Title="Task Manager" Height="760" MinHeight="400" Width="1000" MinWidth="400" Background="#222222" WindowStartupLocation="CenterScreen" RenderTransformOrigin="0.5,0.5" Icon="Images/6520110.png"
        >
    <WindowChrome.WindowChrome>
        <WindowChrome/>
    </WindowChrome.WindowChrome>


    <Grid>
        <DockPanel>
            <Border Background="Black" DockPanel.Dock="Top"
                        Height="32" VerticalAlignment="Top"/>
        </DockPanel>
        <Viewbox Stretch="Fill" Margin="0, 25, 0, 0">
            <Grid>
                <local:AutorizationPanel Visibility="Collapsed"/>
                <Border Width="1020" Height="720">
                    <Grid x:Name="PanelsContainer" Visibility="Visible">
                        <local:TaskPanel/>
                        <local:TaskSectionPanel/>
                        <local:ProfilePanel/>
                    </Grid>
                </Border>
            </Grid>
        </Viewbox>
    </Grid>
</Window>
